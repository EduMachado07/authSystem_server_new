generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  phones   Phone[]
}

model Phone {
  id     String @id @default(uuid())
  number String
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
